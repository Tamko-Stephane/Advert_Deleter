<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/colorElements"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_sms_send_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:textSize="13sp"
        android:gravity="center_horizontal"
        android:text="25/10/2019 19:25"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical">
            <TextView
                android:id="@+id/tv_sms_sender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textStyle="bold"
                android:text="Tamko Stephane"/>

            <TextView
                android:id="@+id/tv_sms_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="italic"
                android:text="Tamko Stephane\n \n"/>
    </LinearLayout>

</LinearLayout>